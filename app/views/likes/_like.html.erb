
    <span class="like">
    <% if  comment.iine?(current_user) %>
      <%= form_for(comment.likes.find_by(user_id: current_user.id), method: :delete, remote: true) do |f| %>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "いいね！　you and#{comment.likes_count-1} other", class: "glyphicon glyphicon-heart" %>
        <% end %>
      <% end %>
    <% else %>
      <%= form_for(comment.likes.build, remote: true) do |f| %>
        <div><%= hidden_field_tag :comment_id, comment.id %></div>
        <%= button_tag(class: "btn btn-default btn-xs") do %>
          <%= content_tag :span, "いいね！#{comment.likes_count}", class: "glyphicon glyphicon-heart-empty" %>
        <% end %>
      <% end %>
    <% end %>
  </span>
